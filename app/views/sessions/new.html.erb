
<h2>Login</h2>
<hr/>

<div class='row'>
  <div class='well span4'>
    <%= form_tag sessions_path do %>
      <div class="control-group">
        <%= label_tag :username %>
        <%= text_field_tag :username %>
      </div>
      <div class="control-group">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <%= submit_tag "Login", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>