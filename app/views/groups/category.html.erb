
<div class="body-center">

  <div class="left-content-container">
    <%= @group.school %> <%= @category.name %>
    member categories
    <ul>
      <% @category.gategories.each do |gategory| %>
        <%= link_to gategory.name, group_gategory_path(@group, gategory) %>
      <% end %>      
    </ul>

  </div>

  <div class="form-content-container">
  
    <%= render 'groups/group_nav' %>


    <div class="<%= @category.master ? @category.ancestor_objects.first.name.downcase : @category.name.downcase %>-jumbotron">
      <div class="black-jumbotron">
        <div class="hierarchy-links">
            <%= link_to @group.school, group_path(@group) %> 
            <% @category.ancestor_objects.each do |ancestor| %>
              > <%= link_to ancestor.name , group_category_path(@group, ancestor, tab: params[:tab]) %> 
            <% end %>
        </div> 
        <h2 class="category-name">
          <%= @category.name %>
        </h2>     

      <% @category.sub_categories.each_slice(3) do |three_categories| %>
        <ul class="sub-categories">
          <% three_categories.each do |category| %>
            <%= link_to category.name, group_category_path(@group, category, tab: params[:tab]) %>
          <% end %>
        </ul>
        
      <% end %>


      <div class="group-category-search">
        <%= form_tag group_search_group_category_path(@group,@category), method: :get do %>
          <div class="box">
            <div class="container-1">
              <span class="icon">
                <button type='submit' class='btn btn-success search-icon'>
                  <%= icon("fa fa-search") %>
                </button>
              </span>
              <%= text_field_tag :search_group_category, params[:search_group_category], placeholder: "Search #{@group.school} #{@category.name}..." %>    
            </div>
          </div>
        <% end %> 
      </div>
    </div>
  </div>





<%= render 'question_image_answer_navbuttons', path: group_category_path(@group, @category) %>

<%= render 'shared/questions_answers_images' %> 

  </div>


  <div class="right-content-container">
  </div>

</div>


 