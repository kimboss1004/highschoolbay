<% flash.each do |name, msg| %>
  <% if msg.is_a?(String)%>

 	<% if name == 'notice' %>
	     <div class="flash alert alert-success alert-dismissable" role="alert">
	      	<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
	      	<p class="lead"><%= msg %></p>
	    </div>
 	<% elsif name == 'error'%>
	     <div class="flash alert alert-danger alert-dismissable" role="alert">
	      	<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
	      	<p class="lead"><%= msg %></p>
	    </div>
 	<% elsif name == 'value' %>
	     <div class="points-flash alert alert-info alert-dismissable" role="alert">
	      	<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
	      	<p class="lead"><%= msg %></p>
	    </div>
 	<% end %>

  <% end %>
<% end %>