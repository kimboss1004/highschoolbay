
<div class="body-center">

  <div class="form-content-container">
    <div class="show-object-container">
      <%= render 'votes/vote_big', object: @image, path: vote_image_path(@image) %>
      <%= render 'shared/descriptive_content_show', object: @image, tab: nil %>
    </div>

    <div class="advertisement">
      <ins class="adsbygoogle"
           style="display:block"
           data-ad-client="ca-pub-9965889724685947"
           data-ad-slot="6278336819"
           data-ad-format="auto"></ins>
      <script>
      (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </div>    

    <% unless @image.pictures.empty? %>
      <% @image.pictures.each do |picture| %>
        <div class=""><%= image_tag picture.photo.url(:large), class: "image" %></div>
      <% end %>
    <% end %>  

    <div class="advertisement">
      <ins class="adsbygoogle"
           style="display:block"
           data-ad-client="ca-pub-9965889724685947"
           data-ad-slot="6278336819"
           data-ad-format="auto"></ins>
      <script>
      (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </div>

    <% if @comments.any? %>
      <div class="answers-nav">
        <p>Comments</p>
      </div>

    <% @comments.each do |comment| %>
      <%= render 'comments/comment', comment: comment, path: vote_image_comment_path(@image, comment)  %>
      <% end %>
    <% end %>



    <div class="answer-form-container">
      <% if @comments.size > 6 %>
        <p><%= @image.title %></p>
      <% end %>
      <%= form_for [@image,@comment] do |f| %>
        <div class="form-group answer-form-input">
          <%= f.text_area :body, rows: 5, placeholder: "Add your comment...", class: "form-control custom-border-input" %>  
        </div>
        <div class="bottom-nav">
          <%= f.submit "Submit", class: 'btn btn-primary custom-blue' %>
        </div>
      <% end %>    
    </div>
  </div>



  <div class="right-content-container">

    <div class="category-board">
      <h2>Popular Categories</h2>
      <div class="sub-titles">
        <p class="school">Category</p>
        <p class="points">Posts</p>
      </div>
      <% Category.where(master: nil).each_with_index do |category, index| %>
        <div class="user">
          <p class="rank"><%= index + 1 %></p>
          <p class="username"><%= link_to upcase_first(category.name), category_path(category) %></p>
          <p class="points"><%= category.questions.size %></p>
        </div>
      <% end %>
      <div class="sub-titles">
        <p class="points"><%= link_to "See All", '#' %></p>
      </div>
    </div>
    <br/>
    <ins class="adsbygoogle"
         style="display:block"
         data-ad-client="ca-pub-9965889724685947"
         data-ad-slot="6278336819"
         data-ad-format="auto"></ins>
    <script>
    (adsbygoogle = window.adsbygoogle || []).push({});
    </script>   
    <br>
  </div>
 

</div>