<div class="well">
  <%= form_for question do |f| %>

    <div class="form-group">
      <%= f.label :title, "Question" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control", rows: 5%>
    </div>
 
    <br/>


    <br/>

    <%= hidden_field_tag 'group', path_value(@group, params[:group]) %>
    <%= hidden_field_tag 'category', path_value(@category, params[:category]) %>
    <%= hidden_field_tag 'gategory', path_value(@gategory, params[:gategory]) %>
    <br/>

    <%= f.submit "Ask", class: 'btn btn-primary' %>
  <% end %>
</div>