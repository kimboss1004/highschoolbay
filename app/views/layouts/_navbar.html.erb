<div class="hsnav">

  <div class="hsbay">
    <%= link_to "HighschoolBay", categories_path %>
  </div>  




  <div class="nav-a">
    <%= form_tag searches_path, method: :get do %>
      <div class="box">
        <div class="container-1">
          <span class="icon">
          <button type='submit' class='search-icon'>
            <i class="fa fa-search"></i>
          </button>
          </span>
          <%= text_field_tag :search, params[:search], placeholder: 'Search...', autofocus: autofocus?(request.fullpath) %>    
        </div>
      </div>
    <% end %> 
  </div>



<ul class="nav-right">
    <% if logged_in? %>
        <li class='school'>
          <% if current_user.group %>
            <%= link_to current_user.group.school, group_path(current_user.group) %>
          <% else %>
            <%= link_to groups_path  do %>
              Find School
            <% end %>
          <% end %>
        </li> 
        <li class="dropdown nav-item pull-right">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-bars fa-lg"></i><span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li class="account-links"><%= link_to "Profile", user_path(current_user) %></li>
            <li class="account-links"><%= link_to "Settings", edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li class="account-links"><%= link_to "Logout", logout_path %></a></li>
          </ul>
        </li>
        <li class='nav-item'>
          <%= link_to notifications_user_path(current_user), method: 'post' do %>
            <i class="fa fa-globe fa-lg"></i>
            <% if current_user.unchecked_notifications %>
              <span class="notification-alert"><%= current_user.unchecked_notifications %></span>
            <% end %>
          <% end %>
        </li>

    <% else %>
        <li class='school'>
          <%= link_to "Find School", groups_path %>
        </li>
        <li class="login">
          <%= link_to "Log in", login_path(log_return: request.fullpath) %>
        </li>        
    

    <% end %>
</ul>

  <ul class='nav-main-categories'>
    <%= link_to "Math", category_path(1) %>
    <%= link_to "English", category_path(4) %>
    <%= link_to "Science", category_path(5) %>
    <%= link_to "History", category_path(21) %>
    <%= link_to "Social Sciences", category_path(36) %>
    <%= link_to "History", category_path(21) %>
    <%= link_to "Health", category_path(38) %>
  </ul>
</div>












